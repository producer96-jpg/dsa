#include <iostream>
#include <string>
using namespace std;
class Node {
public:
    int prn;
    string name;
    Node* next;
    Node(int p, string n) { prn = p; name = n; next = NULL; }
};
class Club {
    Node* head;
public:
    Club() { head = NULL; }
    void addPresident(int prn, string name) {
        Node* t = new Node(prn, name);
        t->next = head;
        head = t;
    }
    void addSecretary(int prn, string name) {
        Node* t = new Node(prn, name);
        if (!head) head = t;
        else { Node* c = head; while (c->next) c = c->next; c->next = t; }
    }
    void addMember(int prn, string name) {
        if (!head) { head = new Node(prn, name); return; }
        Node* t = head;
        while (t->next && t->next->next) t = t->next;
        Node* n = new Node(prn, name);
        n->next = t->next;
        t->next = n;
    }
    void deleteMember(int prn) {
        if (!head) return;
        if (head->prn == prn) { Node* temp = head; head = head->next; delete temp; return; }
        Node* c = head;
        while (c->next && c->next->prn != prn) c = c->next;
        if (c->next) { Node* temp = c->next; c->next = temp->next; delete temp; }
    }
    void display() {
        Node* t = head;
        while (t) { cout << t->prn << " " << t->name << " -> "; t = t->next; }
        cout << "NULL\n";
    }
    int count() {
        int c = 0; Node* t = head;
        while (t) { c++; t = t->next; }
        return c;
    }
    Node* getHead() { return head; }
    void setHead(Node* h) { head = h; }
    static Club concat(Club& A, Club& B) {
        if (!A.head) return B;
        Node* t = A.head;
        while (t->next) t = t->next;
        t->next = B.head;
        return A;
    }
};
int main() {
    Club divA, divB;
    divA.addPresident(1, "Pres_A");
    divA.addMember(2, "Alice");
    divA.addMember(3, "Bob");
    divA.addSecretary(4, "Sec_A");
    divB.addPresident(5, "Pres_B");
    divB.addMember(6, "Charlie");
    divB.addSecretary(7, "Sec_B");
    cout << "Division A:\n"; divA.display();
    cout << "Division B:\n"; divB.display();
    cout << "\nAfter concatenating both divisions:\n";
    Club all = Club::concat(divA, divB);
    all.display();
    cout << "Total members in combined list: " << all.count() << endl;
    cout << "\nDeleting PRN 3 (Bob):\n";
    all.deleteMember(3);
    all.display();
}
