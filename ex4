#include <iostream>
using namespace std;
class Student {
    float per[50];
    int n;
public:
    void getData() {
        cout << "Enter number of students: ";
        cin >> n;
        cout << "Enter percentages:\n";
        for(int i=0;i<n;i++) cin >> per[i];
    }
    void selectionSort() {
        for(int i=0;i<n-1;i++) {
            int min=i;
            for(int j=i+1;j<n;j++)
                if(per[j]<per[min])
                    min=j;
            float temp=per[i];
            per[i]=per[min];
            per[min]=temp;
        }
        cout<<"\nSelection Sort (Ascending): ";
        for(int i=0;i<n;i++) cout<<per[i]<<" ";
        cout<<endl;
    }
    void bubbleSort() {
        for(int i=0;i<n-1;i++)
            for(int j=0;j<n-i-1;j++)
                if(per[j]>per[j+1]) {
                    float t=per[j];
                    per[j]=per[j+1];
                    per[j+1]=t;
                }
        cout<<"\nBubble Sort (Ascending): ";
        for(int i=0;i<n;i++) cout<<per[i]<<" ";
        cout<<endl;
    }
    void topFive() {
        cout<<"\nTop Five Scores: ";
        int k = (n<5)?n:5;
        for(int i=n-1;i>=n-k;i--)
            cout<<per[i]<<" ";
        cout<<endl;
    }
};
int main() {
    Student s;
    s.getData();
    s.selectionSort();
    s.topFive();
    s.bubbleSort();
    s.topFive();
    return 0;
}
