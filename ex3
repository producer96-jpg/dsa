#include <iostream>
#include <algorithm>  
using namespace std;
bool linearSearch(int arr[], int size, int key) {
    int comparison = 0;
    for (int i = 0; i < size; i++) {
        comparison++;
        if (arr[i] == key) {
            cout << "Student attended program.\n";
            cout << "Comparisons in Linear Search = " << comparison << endl;
            return true;
        }
    }
    cout << "Student not attended.\n";
    cout << "Comparisons in Linear Search = " << comparison << endl;
    return false;
}
bool binarySearch(int arr[], int size, int key) {
    int low = 0, high = size - 1, comparison = 0;
    while (low <= high) {
        comparison++;
        int mid = (low + high) / 2;
        if (arr[mid] == key) {
            cout << "Student attended program.\n";
            cout << "Comparisons in Binary Search = " << comparison << endl;
            return true;
        }
        else if (arr[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }
    cout << "Student still not attended.\n";
    cout << "Comparisons in Binary Search = " << comparison << endl;
    return false;
}
int main() {
    int arr[50], size, key;
    cout << "Enter number of students: ";
    cin >> size;
    cout << "Enter roll numbers of students:\n";
    for (int i = 0; i < size; i++)
        cin >> arr[i];
    cout << "Enter roll number to search: ";
    cin >> key;
    cout << "\n--- Linear Search ---\n";
    linearSearch(arr, size, key);
    sort(arr, arr + size);
    cout << "\n--- Binary Search ---\n";
    binarySearch(arr, size, key);
    return 0;
}
