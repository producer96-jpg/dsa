#include <iostream>
#include <ios>
#include <limits>
using namespace std;
class StringOps {
    char str[200];
public:
    void input() {
        cout << "Enter a string: ";
        cin.getline(str, 200);
    }
    void longestWord() {
        int i = 0, len = 0, maxLen = 0, start = 0, maxStart = 0;
        while (str[i] != '\0') {
            if (str[i] != ' ') len++;
            else {
                if (len > maxLen) { maxLen = len; maxStart = start; }
                len = 0; start = i + 1;
            }
            i++;
        }
        if (len > maxLen) { maxLen = len; maxStart = start; }
        cout << "Longest word: ";
        for (i = maxStart; i < maxStart + maxLen; i++)
            cout << str[i];
        cout << endl;
    }
    void charFrequency() {
        char ch;
        cout << "Enter character: ";
        cin >> ch;
        cin.ignore(numeric_limits<streamsize>::max(), '\n');
        int count = 0;
        for (int i = 0; str[i] != '\0'; i++)
            if (str[i] == ch) count++;
        cout << "Frequency of '" << ch << "' = " << count << endl;
    }
    void palindromeCheck() {
        int len = 0;
        while (str[len] != '\0') len++;
        int i = 0, j = len - 1;
        bool flag = true;
        while (i < j) {
            if (str[i] == ' ') { i++; continue; }
            if (str[j] == ' ') { j--; continue; }
            if (str[i] != str[j]) { flag = false; break; }
            i++; j--;
        }
        cout << (flag ? "Palindrome" : "Not palindrome") << endl;
    }
    void findSubstring() {
        char sub[100];
        cout << "Enter substring: ";
        cin.ignore(numeric_limits<streamsize>::max(), '\n');
        cin.getline(sub, 100);
        int i, j, k, found = -1;
        for (i = 0; str[i] != '\0'; i++) {
            for (j = i, k = 0; sub[k] != '\0' && str[j] == sub[k]; j++, k++);
            if (sub[k] == '\0') { found = i; break; }
        }
        if (found != -1)
            cout << "Found at index: " << found << endl;
        else
            cout << "Not found" << endl;
    }
};
int main() {
    StringOps s;
    s.input();
    char choice;
    cout << "\na. Longest word\nb. Char frequency\nc. Palindrome\nd. Substring index\n";
    cout << "Enter choice: ";
    cin >> choice;
    cin.ignore(numeric_limits<streamsize>::max(), '\n');
    switch (choice) {
        case 'a': s.longestWord(); break;
        case 'b': s.charFrequency(); break;
        case 'c': s.palindromeCheck(); break;
        case 'd': s.findSubstring(); break;
        default: cout << "Invalid choice!"; break;
    }
    return 0;
}
